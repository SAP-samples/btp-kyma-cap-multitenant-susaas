{
  "name": "susaas-api",
  "version": "0.0.1",
  "repository": "https://github.com/sap-samples/btp-kyma-cap-multitenant-susaas",
  "license": "Apache License 2.0",
  "description": "Sustainable SaaS API",
  "engines": {
    "node": "^16.x"
  },
  "dependencies": {
    "@sap/cds": "^6.8.4",
    "@sap/cds-mtxs": "^1.8.4",
    "@sap/hana-client": "^2.15.19",
    "@sap/xssec": "^3.2.15",
    "passport": "^0.6.0",
    "express": "^4.18.2"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "multitenancy": true,
      "cds.xt.ExtensibilityService": false,
      "cds.xt.ModelProviderService": false,
      "cds.xt.DeploymentService": false,
      "cds.xt.SaasProvisioningService": false,
      "auth": {
        "kind": "xsuaa"
      },
      "db": {
        "kind": "hana-cloud",
        "vcap": {
          "label": "service-manager",
          "plan": "container"
        },
        "pool": {
          "acquireTimeoutMillis": 10000,
          "min": 0,
          "max": 100,
          "fifo": true
        }
      }
    }
  }
}
