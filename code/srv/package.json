{
  "name": "susaas-srv",
  "version": "0.0.1",
  "repository": "https://github.com/sap-samples/btp-kyma-cap-multitenant-susaas",
  "license": "Apache License 2.0",
  "description": "Sustainable SaaS Srv",
  "engines": {
    "node": "^16.x"
  },
  "dependencies": {
    "@sap/cds": "^6.8.4",
    "@sap/cds-mtxs": "^1.8.4",
    "@sap/cds-odata-v2-adapter-proxy": "^1",
    "@sap/cds-common-content": "^1.0.1",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3.2.15",
    "@sap/hana-client": "^2.15.19",
    "@sap_oss/alert-notification-client": "^1.6.0",
    "@kubernetes/client-node": "^0.18.1",
    "cds-swagger-ui-express": "^0.5.0",
    "passport": "^0.6.0",
    "express":"^4.18.2"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "requires": {
      "multitenancy": true,
      "toggles": true,
      "extensibility": true,
      "cds.xt.ExtensibilityService": {
        "element-prefix": [
          "x_"
        ],
        "extension-allowlist": [
          {
            "for": [
              "*"
            ]
          }
        ]
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "strategy": "JWT",
        "kind": "xsuaa"
      },
      "db": {
        "kind": "hana-cloud",
        "vcap": {
          "label": "service-manager",
          "plan": "container"
        },
        "pool": {
          "acquireTimeoutMillis": 10000,
          "min": 0,
          "max": 100,
          "fifo": true
        }
      }
    }
  }
}
